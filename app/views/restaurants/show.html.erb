<h1>Restaurant Info</h1>

<%= render @restaurant %>

<h2>Reviews</h2>

<ul class='list-group'>
  <% @restaurant.reviews.each do |review| %>
    <li class='list-group-item'>
      <%= review.content %>
      <br>
      <%= review.rating %>
      <br>
      <%= link_to "Remove", review_path(review), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<p><%#= link_to 'New Review', new_restaurant_review_path(@restaurant), class: 'btn btn-success' %></p>

<%= render "reviews/review", restaurant: @restaurant, review: @review %>



<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
